DROP DATABASE IF EXISTS flojo;
CREATE DATABASE flojo;
USE flojo;

DROP TABLE IF EXISTS quickcart_inventory;
CREATE TABLE quickcart_inventory (
	inv_id INTEGER PRIMARY KEY AUTO_INCREMENT NOT NULL
, inv_uuid varchar(64) DEFAULT( UUID() ) NOT NULL
/*, inv_content_match varchar(64) DEFAULT( UUID() ) NOT NULL*/
, inv_cost FLOAT NOT NULL
, inv_qty INTEGER NOT NULL
, inv_item VARCHAR(128) NOT NULL /* a unique identifier */
, inv_description TEXT
, inv_image varchar(2048) 
);

